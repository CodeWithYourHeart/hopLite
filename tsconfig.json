{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./lib",
    "module": "es6",
    "target": "es5",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
          "./node_modules/@types"
    ],
    "allowJs": true,
  }
}